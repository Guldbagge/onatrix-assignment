@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject Umbraco.Cms.Web.Common.UmbracoHelper UmbracoHelper

@{
    var rootContents = UmbracoHelper.ContentAtRoot();
    var settings = rootContents?.FirstOrDefault(x => x.ContentType.Alias == "settingsPage") ?? null;
    var officeLocation = settings?.Value<string>("officeLocation") ?? "";
    var officePhoneNumber = settings?.Value<string>("officePhoneNumber") ?? "";
    var officeEmailAddress = settings?.Value<string>("officeEmailAddress") ?? "";
    var nextProjectImageHuman = Model?.Value<IPublishedContent>("nextProjectImageHuman")?.Url() ?? "";
    var nextProjectImageBackground = Model?.Value<IPublishedContent>("nextProjectImageBackground")?.Url() ?? "";
    var nextProjectImageDot = Model?.Value<IPublishedContent>("nextProjectImageDot")?.Url() ?? "";

}

<section id="next-project" class="bg-gray">
    <div class="container">

        <div class="images">
            <div class="image-human">
                <img src="@nextProjectImageHuman" alt="">
            </div>

            <div class="image-background">
                <img src="@nextProjectImageBackground" alt="">
            </div>

            <div class="image-dot">
                <img src="@nextProjectImageDot" alt="">
            </div>
        </div>

        <div class="text">
            <h2>@Model?.Value("nextProjectTextHeadline")</h2>

            <h5><i class="fas fa-map-marker-alt"></i>@Model?.Value("nextProjectTextLocation")</h5>
            <p>@officeLocation</p>
            
            <h5><i class="fas fa-phone"></i>@Model?.Value("nextProjectTextPhone")</h5>
            <p>@officePhoneNumber</p>
            
            <h5><i class="fas fa-envelope"></i>@Model?.Value("nextProjectTextEmail")</h5>
            <p>@officeEmailAddress</p>
        </div>
    </div>
</section>
