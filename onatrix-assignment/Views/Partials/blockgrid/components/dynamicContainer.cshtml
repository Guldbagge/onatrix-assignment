@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@using ContentModel = Umbraco.Cms.Web.Common.PublishedModels;

@{
    // Om du har en samling av BlockGridItems istället för en BlockGridModel
    var blockGridModel = Model.Content.Value<Umbraco.Cms.Core.Models.Blocks.BlockGridModel>("blockGridAlias");
}

@if (blockGridModel != null)
{
    <div class="block-grid-container">
        @await Html.GetBlockGridHtmlAsync(blockGridModel)
    </div>
}
